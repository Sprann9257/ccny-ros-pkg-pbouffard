<launch>
  <param name="/use_sim_time" value="true"/>
	<node pkg="rviz" type="rviz" name="rviz"
	    args="-d $(find ar_pose)/demo/ar_single/demo.vcg"/>

	<node pkg="tf" type="static_transform_publisher" name="world_to_head_cam"
		args="0.0 0.0 0.0 0.7071 0.0 0.7071 /world /head_camera 10" output="screen"/>

	<node name="ar_pose" pkg="ar_pose" type="ar_single" respawn="false" output="screen">
		<param name="camera_image_topic" type="string" value="/usb_cam/image_raw"/>
		<param name="camera_info_topic" type="string" value="/usb_cam/camera_info"/>
		<param name="marker_pattern" type="string" value="data/patt.hiro"/>
		<param name="marker_width" type="double" value="80.0"/>
		<param name="marker_center_x" type="double" value="0.0"/>
		<param name="marker_center_y" type="double" value="0.0"/>
		<param name="threshold" type="int" value="100"/>
	</node>
	
	<node name="image_view" pkg="image_view" type="image_view" 
		args="image:=/usb_cam/image_raw" />
	
	<node pkg="rosbag" type="rosbag" name="rosbag" 
		args="play $(find ar_pose)/demo/ar_single/usb_cam_topics_ar_single.bag -d 3"/>
	
</launch>
