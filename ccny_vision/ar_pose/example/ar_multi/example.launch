<launch>
	<node pkg="rviz" type="rviz" name="rviz"/>

	<node pkg="tf" type="static_transform_publisher" name="world_to_usb_cam"
		args="0.0 0.0 0.0 0.7071 0.0 0.0 0.7071 world usb_cam 100" />

	<node name="ar_pose" pkg="ar_pose" type="ar_multi" respawn="false" output="screen">
		<param name="camera_image_topic" type="string" value="/usb_cam/image_raw"/>
		<param name="camera_info_topic" type="string" value="/usb_cam/camera_info"/>
		<param name="marker_pattern_list" type="string" value="Data/object_4x4"/>
		<param name="threshold" type="int" value="100"/>
	</node>
	
	<node name="image_view" pkg="image_view" type="image_view" 
		args="image:=/usb_cam/image_raw" />
	
	<node pkg="rosbag" type="rosbag" name="rosbag" 
		args="play $(find ar_pose)/example/ar_multi/usb_cam_topics.bag -d 3"/>
	
</launch>
